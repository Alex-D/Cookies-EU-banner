{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2021",
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "**.js"
  ]
}
